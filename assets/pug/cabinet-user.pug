extends layouts/inside
block vars
  - active__menu = 'Личный кабинет'
  - page_class = 'cabinet'
block header
  include inc/header2
block main
  .cabinet__content
    .container
      nav.cabinet__content--tabs
        ul
          li.active: a(aria-controls="cabinet__tab--1" data-toggle="tab") Личные данные
          li: a(aria-controls="cabinet__tab--2" data-toggle="tab") История заказов
      .tab-content
        #cabinet__tab--1.tab-pane.fade.in.active
          form(action="").cabinet__form.validate__form
            .row
              .col.sm-6.md-5
                .cabinet__form--user
                  .form--row
                    label(for="client-email") E-mail
                    input(type="email" required name="client-email" value="olka@meta.md")#client-email
                  .form--row
                    label(for="client-name") Имя
                    input(type="text" required name="client-name" value="Todiras Radu")#client-name
                  .form--row
                    label(for="client-phone") Телефон
                    input(type="tel" required name="client-phone" value="068-448-405")#client-phone
              .col.sm-6.md-6.offset-md-1
                .cabinet__form--password
                  .form--row
                    label(for="password-old") Старый пароль
                    input(type="password" required name="password-old" placeholder="••••")#password-old
                  .form--row
                    label(for="password-new") Новый пароль
                    input(type="password" required name="password-new" placeholder="••••")#password-new
                  .form--row
                    label(for="password-confirm") Повторите пароль
                    input(type="password" required name="password-confirm" placeholder="••••")#password-confirm
              .col.sm-12.cabinet__form--control: button.btn.btn__accent Сохранить
        #cabinet__tab--2.tab-pane.fade
          .panel-group(role="tablist" aria-multiselectable="true")#orders
